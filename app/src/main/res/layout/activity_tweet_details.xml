<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_margin="10dp">

    <include
        android:id="@+id/tweetMain"
        layout="@layout/item_tweet"></include>

    <ImageView
        android:id="@+id/ivRetweet"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/tweetMain"
        android:layout_alignStart="@+id/tweetMain"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        app:srcCompat="@mipmap/ic_retweet_twitter_foreground" />

    <ImageView
        android:id="@+id/ivFav"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/tweetMain"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/ivRetweet"
        app:srcCompat="@mipmap/ic_heart_foreground" />

    <ImageView
        android:id="@+id/ivReply"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/tweetMain"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/ivFav"
        android:padding="10dp"
        android:tint="#000000"
        app:srcCompat="@drawable/abc_vector_test" />
</RelativeLayout>